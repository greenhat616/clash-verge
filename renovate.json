{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "default:automergeMinor",
    "default:disableRateLimiting",
    "default:rebaseStalePrs",
    "default:pinVersions",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "groupName": "Vite & Unplugin packages",
      "matchPackagePatterns": ["vite", "unplugin"]
    },
    {
      "groupName": "React packages",
      "matchPackagePatterns": ["react", "zustand", "i18next"]
    },
    {
      "groupName": "Axum packages",
      "matchPackageNames": ["axum", "tower-http"]
    },
    {
      "groupName": "Rust workspace packages",
      "matchManagers": ["cargo"],
      "matchFileNames": ["backend/Cargo.toml"],
      "rangeStrategy": "range"
    },
    {
      "groupName": "Rust modified crates packages",
      "matchManagers": ["cargo"],
      "matchFileNames": ["backend/delay_timer/Cargo.toml"],
      "rangeStrategy": "range"
    },
    {
      "groupName": "Rust tauri packages",
      "matchManagers": ["cargo"],
      "matchFileNames": ["backend/tauri/Cargo.toml"],
      "rangeStrategy": "pin"
    },
    {
      "groupName": "TypeScript",
      "matchPackagePatterns": ["typescript"]
    },
    {
      "groupName": "Lint packages",
      "matchPackagePatterns": [
        "eslint",
        "prettier",
        "commitlint",
        "stylelint",
        "husky",
        "lint-staged"
      ]
    },
    {
      "groupName": "Testing packages",
      "matchPackagePatterns": ["vitest", "cypress", "wdio"]
    }
  ],
  "includeForks": true
}
